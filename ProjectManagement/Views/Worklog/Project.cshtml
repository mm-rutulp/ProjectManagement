@model ProjectManagement.ViewModels.ProjectWorklogViewModel
@using Microsoft.AspNetCore.Identity
@using ProjectManagement.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Project Worklogs";
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = User.IsInRole("Admin");
}

<div class="container">
    <h1>@Model.ProjectName - Worklogs</h1>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Filter Worklogs</h5>
                    <div>
                        <a asp-action="Create" asp-route-id="@Model.ProjectId" class="btn btn-primary btn-sm">Add Worklog</a>
                        <a asp-action="MonthlySummary" asp-route-id="@Model.ProjectId" class="btn btn-info btn-sm">Monthly Summaries</a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Project" method="get" class="row g-3">
                        <input type="hidden" name="id" value="@Model.ProjectId" />
                        
                        <div class="col-md-6">
                            <label class="form-label">Team Member</label>
                            <select name="userId" class="form-select">
                                <option value="">All Team Members</option>
                                @foreach (var member in Model.ProjectMembers)
                                {
                                    <option value="@member.Id" selected="@(Model.UserId == member.Id)">@member.FullName</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-md-3">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="startDate" class="form-control" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" />
                        </div>
                        
                        <div class="col-md-3">
                            <label class="form-label">End Date</label>
                            <input type="date" name="endDate" class="form-control" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" />
                        </div>
                        
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                            <a asp-action="Project" asp-route-id="@Model.ProjectId" class="btn btn-secondary">Clear Filters</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Worklog Entries</h5>
                </div>
                <div class="card-body">
                    @if (Model.Worklogs.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Team Member</th>
                                    <th>Hours</th>
                                    <th>Task Type</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var worklog in Model.Worklogs)
                                {
                                    <tr>
                                        <td>@worklog.Date.ToShortDateString()</td>
                                        <td>@worklog.User?.FullName</td>
                                        <td>@worklog.HoursWorked</td>
                                        <td>@worklog.TaskType</td>
                                        <td>@worklog.Description</td>
                                        <td>
                                            @if (isAdmin || worklog.UserId == currentUser.Id)
                                            {
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Edit" asp-route-id="@worklog.Id" class="btn btn-outline-warning">Edit</a>
                                                    <a asp-action="Delete" asp-route-id="@worklog.Id" class="btn btn-outline-danger">Delete</a>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        
                        <div class="mt-3">
                            <strong>Total Hours: @Model.Worklogs.Sum(w => w.HoursWorked)</strong>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p>No worklog entries found for the selected filters.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-controller="Project" asp-action="Details" asp-route-id="@Model.ProjectId" class="btn btn-secondary">Back to Project</a>
    </div>
</div> 
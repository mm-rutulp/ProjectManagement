@model ProjectManagement.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    
    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this project?</h3>
        <p>This will remove all project assignments, worklogs, and other associated data. This action cannot be undone.</p>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Project Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9"><span class="badge bg-primary">@Model.Status</span></dd>

                        <dt class="col-sm-3">Start Date</dt>
                        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

                        <dt class="col-sm-3">End Date</dt>
                        <dd class="col-sm-9">
                            @if (Model.EndDate.HasValue)
                            {
                                @Model.EndDate.Value.ToShortDateString()
                            }
                            else
                            {
                                <span>Not specified</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model ProjectManagement.ViewModels.ProjectAssignmentViewModel
@using Microsoft.AspNetCore.Identity
@using ProjectManagement.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Team Management";
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = User.IsInRole("Admin");
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h1>@Model.ProjectName - Team Management</h1>
    <a asp-controller="Project" asp-action="Details" asp-route-id="@Model.ProjectId" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Project
    </a>
</div>

<div class="row">
    <!-- Left Side - Team Members Grid -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Current Team Members</h5>
                <a asp-action="Create" asp-route-id="@Model.ProjectId" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Team Member
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var assignment in Model.CurrentAssignments)
                            {
                                <tr>
                                    <td>@assignment.User.FullName</td>
                                    <td>@assignment.Role</td>
                                    <td>
                                        <!-- need to check here if it is assigned as -->
                                        <span class="badge bg-primary">Regular</span>
                                    </td>
                                    <td>
                                        @if (isAdmin)
                                        {
                                            <form asp-action="RemoveTeamMember" method="post" class="d-inline">
                                                <input type="hidden" name="projectId" value="@Model.ProjectId" />
                                                <input type="hidden" name="userId" value="@assignment.UserId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to remove this team member?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                            @foreach (var shadowAssignment in Model.CurrentShadowAssignments)
                            {
                                <tr>
                                    <td>@shadowAssignment.ShadowResource.FullName</td>
                                    <td>Shadow Resource</td>
                                    <td>
                                        <span class="badge bg-info">Shadow</span>
                                    </td>
                                    <td>
                                        @if (isAdmin || shadowAssignment.ProjectOnBoardUserId == currentUser.Id)
                                        {
                                            <form asp-action="RemoveShadowResource" method="post" class="d-inline">
                                                <input type="hidden" name="projectId" value="@Model.ProjectId" />
                                                <input type="hidden" name="shadowResourceId" value="@shadowAssignment.ShadowResourceId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to remove this shadow resource?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Side - Forms -->
    <div class="col-md-4">
        @if (isAdmin)
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Add Team Member</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Assign" method="post">
                        <input type="hidden" name="projectId" value="@Model.ProjectId" />
                        
                        <div class="mb-3">
                            <label class="form-label">Employee</label>
                            <select name="userId" class="form-select" required>
                                <option value="">Select Employee</option>
                                @foreach (var employee in Model.AvailableEmployees)
                                {
                                    <option value="@employee.Id">@employee.FullName</option>
                                }
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Role</label>
                            <select name="role" class="form-select" required>
                                <option value="">Select Role</option>
                                <option value="Developer">Developer</option>
                                <option value="Designer">Designer</option>
                                <option value="QA">QA</option>
                                <option value="Project Manager">Project Manager</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle"></i> Add Team Member
                        </button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Add Shadow Resource</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AssignShadowResource" method="post">
                        <input type="hidden" name="projectId" value="@Model.ProjectId" />
                        <input type="hidden" name="projectOnBoardUserId" value="@currentUser.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Shadow Resource</label>
                            <select name="shadowResourceId" class="form-select" required>
                                <option value="">Select Shadow Resource</option>
                                @foreach (var employee in Model.AvailableEmployees)
                                {
                                    <option value="@employee.Id">@employee.FullName</option>
                                }
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle"></i> Add Shadow Resource
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript for form validation or other functionality here
    </script>
} 